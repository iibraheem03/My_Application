<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/schooltheme"
    tools:context=".topicsActivity2">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_margin="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button21"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/topics_butt_top"
            android:onClick="grammerButton"
            android:text="VERB TENSES"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button22"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/topics_midd_butt"
            android:text="PHRASEL VERBS"
            android:textColor="@color/white"
            android:onClick="toPhraselActivity"/>

        <Button
            android:id="@+id/button23"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/topics_midd_butt"
            android:text="YOUTUBE"
            android:onClick="toYoutubeChannel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button25"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/topics_butt_bot"
            android:text="TRANSLATER"
            android:onClick="translaterWebsite"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>